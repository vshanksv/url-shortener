<%= form_with model: @user, url: v1_session_path, class: "max-w-sm mx-auto" do |form| %>
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">Sign In</h1>
  </div>

  <div>
    <%#= form.label :email %>
    <%= form.email_field :email, placeholder: "Email", class: "w-full p-2 border border-gray-300 rounded mb-4" %>
  </div>

  <div>
    <%#= form.label :password %>
    <%= form.password_field :password, placeholder: "Password", class: "w-full p-2 border border-gray-300 rounded mb-4" %>
  </div>

  <div>
    <%= form.submit "Sign In", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full" %>
  </div>
<% end %>