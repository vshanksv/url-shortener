<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-4">Original URL</h1>
  <input type="text" disabled value="<%= @short_link.target_url %>" class="w-full p-2 border border-gray-300 rounded mb-4">
  <h1 class="text-2xl font-bold mb-4">Shortened URL</h1>
  <input type="text" disabled value="<%= domain_url(@short_link.short_url) %>" class="w-full p-2 border border-gray-300 rounded mb-4">
  <%= button_to "Shorten another", new_v1_short_link_path, method: :get, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded w-full" %>
</div>