<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-4">Original URL</h1>
  <input type="text" value="<%= @short_link.target_url %>" class="w-full p-2 border border-gray-300 rounded mb-4" disabled>

<!--  <input type="text" id="shorten_url" readonly value="<%#= domain_url(@short_link.short_url) %>" class="w-full p-2 border border-gray-300 rounded mb-4">-->
  <div data-controller="clipboard">
    <h1 class="text-2xl font-bold mb-4">Shortened URL</h1>
    <input type="text" data-clipboard-target="source" value="<%= domain_url(@short_link.short_url) %>" class="w-full p-2 border border-gray-300 rounded mb-4" disabled>
    <button data-action="clipboard#copy" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-gray-50 rounded-xl items-center gap-2">Copy URL</button>
    <%= link_to "Visit URL", @short_link.target_url, target: "_blank", class: "px-4 py-2 bg-gray-500 hover:bg-gray-600 text-gray-50 rounded-xl items-center gap-2" %>
  </div>
  <br/>
  <%= button_to "Shorten another", new_v1_short_link_path, method: :get, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded w-full" %>
</div>